= content_for :head, auto_discovery_link_tag(:atom, discussions_url(trending_ignored: 'true', format: :atom))

= render partial: 'nav'

%hr

.jumbotron
  %h4 Up to the top 25 posts that have been ignored (muted) on trending ...

%small
  %ul
    - @discussions.group_by{ |d| group_pattern(d) }.sort_by{ |d| d.last.last[:timestamp] }.each do |group|
      - key = group.first
      - from = key.first
      - amount = key.last
      - discussion = group.last.last
      %li
        ignored by
        %strong= from.to_sentence.html_safe
        - if group.last.size == 1
          \-
          = link_to discussion[:slug], "#{site_prefix}#{discussion[:url]}"
        - else
          %ul
            - group.last.each do |discussion|
              %li
                = link_to discussion[:slug], "#{site_prefix}#{discussion[:url]}"
